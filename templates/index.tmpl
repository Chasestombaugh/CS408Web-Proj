{{ define "index.tmpl" }}
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{{ .title }}</title>

    <!-- Bootstrap via CDN (easy proof) -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>

  <body class="bg-light">
    <main class="container py-5">
      <div class="card shadow-sm">
        <div class="card-body">
          <h1 class="display-6 mb-3">{{ .message }}</h1>
          <p class="text-muted mb-0">
            Rendered using Go templates (SSR) + styled with Bootstrap.
          </p>
        </div>
      </div>
    </main>
  </body>
</html>
{{ end }}
